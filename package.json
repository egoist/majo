{
  "name": "majo",
  "version": "0.4.1",
  "description": "my badass project",
  "repository": {
    "url": "egoist/majo",
    "type": "git"
  },
  "main": "dist/majo.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "npm run build && npm run lint && jest",
    "prepublishOnly": "npm run build",
    "lint": "xo",
    "build": "bili"
  },
  "bili": {
    "input": "src/index.ts",
    "js": "typescript",
    "filename": "majo.js"
  },
  "author": "egoist <0x142857@gmail.com>",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/examples/"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.0",
    "@types/globby": "^6.1.0",
    "@types/node": "^8.5.7",
    "babel-preset-env": "^1.4.0",
    "bili": "^1.3.8",
    "buble": "^0.15.2",
    "eslint-config-rem": "^3.0.0",
    "jest-cli": "^19.0.0",
    "rollup-plugin-typescript": "^0.8.1",
    "typescript": "^2.6.2",
    "xo": "^0.18.0"
  },
  "xo": {
    "extends": "rem",
    "esnext": true,
    "envs": [
      "jest"
    ],
    "ignores": [
      "test/fixture/**",
      "test/output/**",
      "examples/**"
    ],
    "rules": {
      "guard-for-in": 0
    }
  },
  "dependencies": {
    "fs-extra": "^3.0.1",
    "globby": "^6.1.0",
    "ware": "^1.3.0"
  }
}
